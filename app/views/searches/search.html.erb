<h1>Results</h1>

<table class='table table-hover table-inverse'>
  
  <% if @range == "User" %>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>introduction</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to(user) do %>
          <%= image_tag user.get_profile_image, size:'50x50' %>
          <% end %>
      </td>
      <td><%= link_to user.name,user, class: "user_#{user.id}" %></td>
      <td><%= user.introduction %></td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
      </td>
      <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>