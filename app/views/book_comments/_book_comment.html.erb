<p>comment:<%= book.book_comments.count %></p>
<% book.book_comments.each do |book_comment| %>
<table class='table'>
  <tbody>
   
   <tr>
     <td>
       <%= image_tag book_comment.user.get_profile_image, size: "100x100" %>
       <%= book_comment.user.name %>
     </td>
     <td>
       <%= book_comment.created_at.strftime('%Y/%m/%d') %>
     </td>
     <td><%= book_comment.comment %></td>
     <td>
       <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book, book_comment),method: :delete, remote: true, class: "btn btn-danger" %>
       <% end %>
     </td>
   </tr>
   </tbody>
   </table>
   <% end %>